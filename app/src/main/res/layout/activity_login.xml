<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.wengjianfeng.wanandroid.ui.activity.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/selector_close" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/clearEditText_login_userName"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <com.wengjianfeng.wanandroid.widget.ClearEditText
        android:id="@+id/clearEditText_login_userName"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:hint="请输入用户名"
        android:drawableBottom="@drawable/line_gray"
        android:drawableLeft="@drawable/ic_email"
        android:drawableStart="@drawable/ic_email" />

    <com.wengjianfeng.wanandroid.widget.ClearEditText
        android:id="@+id/clearEditText_login_password"
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clearEditText_login_userName"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="请输入密码"
        android:drawableBottom="@drawable/line_gray"
        android:drawableLeft="@drawable/ic_password"
        android:drawableStart="@drawable/ic_password"
        android:gravity="center_vertical"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clearEditText_login_password"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login"
        android:text="登录"
        android:textColor="@color/selector_button_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="注册"
        android:textColor="@color/text1"
        android:textSize="16sp" />
</RelativeLayout>
